<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Themes">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="MessageForegroundBrush" Color="White"/>
            <SolidColorBrush x:Key="MessageBackgroundBrush" Color="Transparent"/> <!--Color="#2B333B"/>-->
            <SolidColorBrush x:Key="MessageBorderBrush" Color="Gray"/> <!--Color="Transparent"/>-->
            <SolidColorBrush x:Key="MessageSubtleLabelBrush" Color="{ThemeResource SystemAccentColorLight2}"/>
            <SolidColorBrush x:Key="MessageSubtleGlyphBrush" Color="{ThemeResource SystemAccentColorLight2}"/>

            <SolidColorBrush x:Key="MessageHeaderForegroundBrush" Color="{ThemeResource SystemAccentColorLight2}"/>
            <SolidColorBrush x:Key="MessageHeaderBorderBrush" Color="{ThemeResource SystemAccentColorLight2}"/>

            <SolidColorBrush x:Key="MessageMediaForegroundBrush" Color="{ThemeResource SystemAccentColorDark3}"/>
            <SolidColorBrush x:Key="MessageMediaBackgroundBrush" Color="{ThemeResource SystemAccentColor}"/>
            
            <SolidColorBrush x:Key="MessageHyperlinkForegroundBrush" Color="#000000"/>

            <SolidColorBrush x:Key="MessageOverlayBackgroundBrush" Color="#54000000"/>

            <SolidColorBrush x:Key="MessageServiceBackgroundBrush" Color="#7F89A0B4"/>
            <SolidColorBrush x:Key="MessageServiceBackgroundPressedBrush" Color="#A2BBC8D4"/>

            <SolidColorBrush x:Key="MessageCallForegroundBrush" Color="Green"/>
            <SolidColorBrush x:Key="MessageCallMissedForegroundBrush" Color="Red"/>
            
            <HorizontalAlignment x:Key="MessageHorizontalAlignment">Stretch</HorizontalAlignment>

            <ElementTheme x:Key="MessageTextBlockTheme">Dark</ElementTheme>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="MessageForegroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="MessageBackgroundBrush" Color="Transparent"/>
            <SolidColorBrush x:Key="MessageBorderBrush" Color="#000000"/> <!--Color="#29748ea2"/>-->
            <SolidColorBrush x:Key="MessageSubtleLabelBrush" Color="{ThemeResource SystemAccentColorLight1}"/>
            <SolidColorBrush x:Key="MessageSubtleGlyphBrush" Color="{ThemeResource SystemAccentColorLight1}"/>

            <SolidColorBrush x:Key="MessageHeaderForegroundBrush" Color="{ThemeResource SystemAccentColorLight1}"/>
            <SolidColorBrush x:Key="MessageHeaderBorderBrush" Color="{ThemeResource SystemAccentColorLight1}"/>

            <SolidColorBrush x:Key="MessageMediaForegroundBrush" Color="{ThemeResource SystemAccentColorLight1}"/>
            <SolidColorBrush x:Key="MessageMediaBackgroundBrush" Color="{ThemeResource SystemAccentColorLight2}"/>

            <SolidColorBrush x:Key="MessageHyperlinkForegroundBrush" Color="#000000"/>

            <SolidColorBrush x:Key="MessageOverlayBackgroundBrush" Color="#54000000"/>

            <SolidColorBrush x:Key="MessageServiceBackgroundBrush" Color="#7F89A0B4"/>
            <SolidColorBrush x:Key="MessageServiceBackgroundPressedBrush" Color="#A2BBC8D4"/>

            <SolidColorBrush x:Key="MessageCallForegroundBrush" Color="Green"/>
            <SolidColorBrush x:Key="MessageCallMissedForegroundBrush" Color="Red"/>
            
            <HorizontalAlignment x:Key="MessageHorizontalAlignment">Stretch</HorizontalAlignment>

            <ElementTheme x:Key="MessageTextBlockTheme">Light</ElementTheme>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
